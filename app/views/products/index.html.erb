<header>
  <h1 class="h2">Søgefelt</h1>
</header>
<section class="search-form">
  <%= form_for :products, method: :get do |f| %>
    <div class="input-group input-group-lg">
      <%= label_tag :keywords, nil, class: "sr-only" %>
      <%= text_field_tag :keywords, nil, placeholder: "Søg i forlag, titler og forfattere..", class: "form-control input-lg" %>
      <span class="input-group-btn">
        <%= submit_tag "Find produkt", class: "btn btn-primary btn-sm" %>
      </span>
    </div>
  <% end %>
</section>
<section class="search-results">
  <header>
    <h1 class="h3">Results</h1>
  </header>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Titel</th>
        <th>Undertitel</th>
        <th>Forfattere</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.subtitle %></td>
          <td><%= product.authors %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
